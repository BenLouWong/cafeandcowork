
mixin attribute(value, expanded)
  span(class=getValueColor(value))
    if value != Null
      span= getValueText(value)
    else
      a(href=site.github title="Add missing data" target="_blank")
        i.fa.fa-question-circle-o
        if expanded
          span Add missing data
  
mixin score(place)
  span= formatScore(place.score)

mixin hours(hours)
  div Mon: #{formatHours(hours[1])}
  div Tue: #{formatHours(hours[2])}
  div Wed: #{formatHours(hours[3])}
  div Thu: #{formatHours(hours[4])}
  div Fri: #{formatHours(hours[5])}
  div Sat: #{formatHours(hours[6])}
  div Sun: #{formatHours(hours[0])}
